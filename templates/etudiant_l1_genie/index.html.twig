{% extends 'base.html.twig' %}

{% block title %}Liste Des Etudiants{% endblock %}

{% block body %}
<div class="container">
{% if not etudiants.items is same as([]) %}


{% for message in app.flashes('succes') %}
    <div class="alert alert-primary mt-4" role="alert">
        {{ message }}
    </div>
{% endfor %}
<h1> Calculabilité </h1>

<a href="{{ path('app_etudiant_l1_genie.new') }}" class="btn btn-primary mt-4"> Ajouter un Etudiant </a>



<section class="section mt-4">
    	<table class="table table-bordered border-primary">
            <thead>
                <tr>
					<th scope="col">N°</th>
				    <th scope="col">NOM</th>
				    <th scope="col">POSTNOM</th>
				    <th scope="col">PRENOM</th>
				    <th scope="col">SEXE</th>
				    <th scope="col">Code</th>
					<th scope="col">Edition</th>
					<th scope="col">Suppression</th>
				</tr>
            </thead>
            <tbody>
            {% for etudiant in etudiants %}
                <tr>
					<th scope="row">{{ etudiant.id }}</th>
				    <td>{{ etudiant.nom }}</td>
				    <td>{{ etudiant.postnom }}</td>
				    <td>{{ etudiant.prenom }}</td>
				    <td>{{ etudiant.sexe }}</td>
				    <td>{{ etudiant.code }}</td>
					<td>
						<a href="{{ path('app_etudiant_l1_genie.edit', { id: etudiant.id }) }}" class="btn btn-info mt-4">Modifier</a>
					</td>
					<td>
						<a href="{{ path('app_etudiant_l1_genie.delete', { id: etudiant.id }) }}" class="btn btn-danger mt-4">Supprimer</a>
					</td>
				</tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="navigation">
            {{ knp_pagination_render(etudiants) }}
        </div>
	{% else %} 
		<h4> Il n'y a pas d'etudiants </h4>
		<a href="{{ path('app_etudiant_l1_genie.new') }}" class="btn btn-primary mt-4"> Ajouter un Etudiant </a>
	{% endif %}
</section>
{% endblock %}
