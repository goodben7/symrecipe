{% extends 'base.html.twig' %}

{% block title %}Liste Des Cotes{% endblock %}

{% block body %}
<div class="container">
{% if not cotes.items is same as([]) %} 

{% for message in app.flashes('succes') %}
    <div class="alert alert-primary mt-4" role="alert">
        {{ message }}
    </div>
{% endfor %}

<h1> Calculabilit√© </h1>


<section class="section mt-4">
    	<table class="table table-bordered border-primary">
            <thead>
                <tr>
					<th scope="col">Etudiant</th>
				    <th scope="col">TP 1</th>
				    <th scope="col">TP 2</th>
				    <th scope="col">INTERRO 1</th>
				    <th scope="col">INTERRO 2</th>
					<th scope="col">Edition</th>
				</tr>
            </thead>
            <tbody>
            {% for cote in cotes %}
                <tr>
					<th scope="row">{{ cote.etudiant }}</th>
				    <td>{{ cote.tp1 }}</td>
				    <td>{{ cote.tp2 }}</td>
				    <td>{{ cote.interro1 }}</td>
				    <td>{{ cote.interro2 }}</td>
					<td>
						<a href="{{ path('app_cote_l1_genie.edit', { id: cote.id }) }}" class="btn btn-info mt-4">Modifier</a>
					</td>
				</tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="navigation">
            {{ knp_pagination_render(cotes) }}
        </div>
	{% else %} 
		<h4> Il n'y a pas des cotes </h4>
	{% endif %}
</section>
{% endblock %}
